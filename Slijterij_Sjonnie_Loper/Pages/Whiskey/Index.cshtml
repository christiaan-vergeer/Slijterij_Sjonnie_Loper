@page
@model Slijterij_Sjonnie_Loper.Pages.Whiskey.IndexModel
@{
}

<h1>Whiskey</h1>

<form method="get">
    <table>
        <tr>
            @*<p style="text-align:center">*@
            <td>
                Name:
            </td>
            <td>
                <input type="text" asp-for="searchname" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
            <td>
                Age:
            </td>
            <td>
                <input type="number" asp-for="searchage" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
            <td>
                Area:
            </td>
            <td>
                <input type="text" asp-for="searcharea" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
        </tr>
        @*</p>
        <p style="text-align:center">*@
        <tr>
            <td>
                Type:
            </td>
            <td>

                <select asp-for="searchtype" asp-items="Html.GetEnumSelectList<Core.Kind>()">
                    <option selected="selected" value="-1">No Filter</option>
                </select>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
            <td>
                Alchol-Percentage:
            </td>
            <td>
                <input type="number" asp-for="searchper" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
            <td>
            </td>
            <td>
                <input type="submit" value="Filter" />
            </td>
        </tr>
        @*</p>*@
    </table>
</form>
<table class="table">
    <tr>
        <td><b>Name</b></td>
        <td><b>Age</b></td>
        <td><b>Area</b></td>
        <td><b>Kind</b></td>
        <td><b>Alchol percentage</b></td>
    </tr>
    @foreach (var whiskey in Model.Whiskeys)
    {
    <tr>
        <td>@whiskey.Name</td>
        <td>@whiskey.Age</td>
        <td>@whiskey.Area</td>
        <td>@whiskey.Kind</td>
        <td>@whiskey.Percentage</td>
    </tr>
    }
</table>